<!-- app/views/layouts/mailer.html.erb -->
<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title><%= message.subject %></title>
    <style type="text/css">
      /* Reset styles */
      body, table, td, a { -webkit-text-size-adjust: 100%; -ms-text-size-adjust: 100%; }
      table, td { mso-table-lspace: 0pt; mso-table-rspace: 0pt; }
      img { -ms-interpolation-mode: bicubic; border: 0; outline: none; text-decoration: none; }

      /* Remove default styling */
      body { margin: 0; padding: 0; width: 100% !important; min-width: 100%; }

      /* Email styles */
      body { font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; }
      .container { max-width: 600px; margin: 0 auto; padding: 20px; }
      .header { text-align: center; padding: 30px 0; border-bottom: 1px solid #e5e5e5; }
      .logo { font-size: 24px; font-weight: bold; color: #333; text-decoration: none; }
      .content { padding: 30px 0; }
      .footer { padding: 30px 0; border-top: 1px solid #e5e5e5; text-align: center; color: #999; font-size: 14px; }
      .button { display: inline-block; padding: 12px 24px; background-color: #007bff; color: white !important; text-decoration: none; border-radius: 5px; font-weight: 500; }
      .button:hover { background-color: #0056b3; }
      h1 { color: #333; font-size: 24px; margin-bottom: 20px; }
      p { color: #666; line-height: 1.6; margin-bottom: 15px; }
      .alert { background-color: #fff3cd; border: 1px solid #ffeaa7; padding: 15px; border-radius: 5px; margin: 20px 0; }
      .code { background-color: #f8f9fa; padding: 10px; border-radius: 5px; font-family: monospace; }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="header">
        <a href="<%= ENV.fetch('FRONTEND_URL', 'http://localhost:3001') %>" class="logo">
          <%= ENV.fetch('APP_NAME', 'YourApp') %>
        </a>
      </div>

      <div class="content">
        <%= yield %>
      </div>

      <div class="footer">
        <p>Â© <%= Date.current.year %> <%= ENV.fetch('APP_NAME', 'YourApp') %>. All rights reserved.</p>
        <p>
          <%= ENV.fetch('COMPANY_ADDRESS', '123 Main St, City, State 12345') %>
        </p>
        <p>
          <a href="<%= ENV.fetch('FRONTEND_URL', 'http://localhost:3001') %>/unsubscribe" style="color: #999;">Unsubscribe</a> |
          <a href="<%= ENV.fetch('FRONTEND_URL', 'http://localhost:3001') %>/privacy" style="color: #999;">Privacy Policy</a>
        </p>
      </div>
    </div>
  </body>
</html>
