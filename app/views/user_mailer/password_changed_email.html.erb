<!-- app/views/user_mailer/password_changed_email.html.erb -->
<h1>Your password has been changed</h1>

<p>Hi <%= @user.full_name.presence || 'there' %>,</p>

<p>This is a confirmation that your password was successfully changed on <%= @changed_at %>.</p>

<div class="alert">
  <strong>Didn't make this change?</strong><br>
  If you didn't change your password, please contact us immediately at
  <a href="mailto:<%= @support_email %>"><%= @support_email %></a>
</div>

<h2>Keep your account secure</h2>
<ul>
  <li>Use a strong, unique password</li>
  <li>Enable two-factor authentication (coming soon)</li>
  <li>Never share your password with anyone</li>
  <li>Be cautious of phishing emails</li>
</ul>

<p>
  Best regards,<br>
  The <%= ENV.fetch('APP_NAME', 'YourApp') %> Team
</p>
